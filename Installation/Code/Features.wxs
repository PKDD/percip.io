<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
          <Directory Id="INSTALLLOCATION" Name="Installation">
            <Merge Id="InstallationMM" SourceFile="$(var.InstallationMM.TargetPath)" DiskId="1" Language="1033"/>
        </Directory>
      </Directory>
    </Directory>
    <Feature Id="Installation" Title="Installation" Description="Installs all the files needed for Installation" Level="1" AllowAdvertise="no" ConfigurableDirectory="INSTALLLOCATION">
      <MergeRef Id="InstallationMM"/>
    </Feature>
  </Fragment>
</Wix>